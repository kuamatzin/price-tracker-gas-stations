# Node.js Scraper Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://fuelintel:your_secure_password_here@localhost:5432/fuelintel

# API Configuration
API_BASE_URL=http://localhost:8000
SCRAPER_API_KEY=your_scraper_api_key_here

# Scraper Settings
SCRAPER_INTERVAL_MINUTES=30
SCRAPER_BATCH_SIZE=100
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_TIMEOUT=30000

# Government API URLs
GOV_PRICES_URL=https://api.datos.gob.mx/v1/precio.gasolina
GOV_STATIONS_URL=https://api.datos.gob.mx/v1/estaciones.servicio

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/scraper.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090