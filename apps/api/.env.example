APP_NAME=FuelIntel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Mexico_City
APP_URL=http://localhost
APP_FRONTEND_URL=http://localhost:3000

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=fuelintel
DB_USERNAME=fuelintel
DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@fuelintel.mx"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:3000
SANCTUM_TOKEN_EXPIRATION=1440

# Scraper Configuration
SCRAPER_RUN_TIME=05:00
SCRAPER_WEBHOOK_SECRET=your_webhook_secret_here
SCRAPER_COMMAND="cd ../scraper && npm run scrape"
SCRAPER_TIMEOUT=3600
SCRAPER_MAX_RETRIES=3
DATA_STALE_HOURS=25
SCRAPER_API_TOKEN=your_scraper_api_token_here
SCRAPER_METRICS_URL=http://localhost:9090/metrics
SCRAPER_HEALTH_URL=http://localhost:9090/health

# Government API Configuration
GOV_API_KEY=
GOV_API_URL=https://api.datos.gob.mx/v1/

# DeepSeek API Configuration (for Spanish NLP)
# Create account at platform.deepseek.com
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=500
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT_SECONDS=2
NLP_CONFIDENCE_THRESHOLD=0.7
NLP_CONTEXT_TTL_SECONDS=300

# Telegram Bot Configuration
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=fuelintel_bot
TELEGRAM_WEBHOOK_URL=https://api.fuelintel.mx/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_telegram_webhook_secret_here
TELEGRAM_CERTIFICATE_PATH=
TELEGRAM_ASYNC_REQUESTS=false

# Vultr Object Storage (S3-compatible)
# Configure in Vultr dashboard
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ewr
AWS_BUCKET=fuelintel-reports
AWS_ENDPOINT=https://ewr1.vultrobjects.com
AWS_USE_PATH_STYLE_ENDPOINT=true

# Sentry Error Tracking
# Create project at sentry.io
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=local
